#!/bin/bash


_python_() {
    python3${pVer%.*} -c "$1"
}

_THANOSBOT_MAIN() {
    $(_python_ 'from git import Repo
import sys

_UPSTREAM_ = "https://github.com/OGGYMAMAN-TG/THANOS-PROS"
_BRANCH_ = "master"

repo = Repo.init()
origin = repo.create_remote("temponame", _UPSTREAM_)
origin.fetch()
repo.create_head(_BRANCH_, origin.refs[_BRANCH_])
repo.heads[_BRANCH_].checkout(True) ')
}

_THANOS_repo () {
    local hrepo
    hrepo=`echo "aHR0cHM6Ly9naXRodWIuY29tL3Jpc2hhYmg4N3lodHRzL1RIQU5PUy1QUk8=" | base64 -d`
    echo "$rlink"
}

_THANOS_zip () {
    echo "aHR0cHM6Ly9naXRodWIuY29tL3Jpc2hhYmg4N3lodHRzL1RIQU5PUy1QUk8vYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
}

_THANOSBOT_PLUG() {
    local hrepo=$(_THANOS_repo)
    $(_python_ 'from git import Repo
import sys
_UPSTREAM_ = "'$hrepo'"
_BRANCH_ = "master"
repo = Repo.init()
origin = repo.create_remote("temponame", _UPSTREAM_)
origin.fetch()
repo.create_head(_BRANCH_, origin.refs[_BRANCH_])
repo.heads[_BRANCH_].checkout(True) ')
}

_starter () {
    local THANOSpath
    THANOSpath="THANOS-PRO.zip"
    echo "  üíï Downloading Ôº¥Ôº®ŒõÔºÆ‚ô¢Ôº≥ÔºçÔº∞Ôº≤‚ô¢ Source Code... üíï"
    wget -q $(_THANOS_zip) -O "$THANOSpath"
    echo "  üíìUnpacking Data...üíì"
    THANOSPATH=$(zipinfo -1 "$THANOSpath" | grep -v "/.");
    unzip -qq "$THANOSpath"
    echo " üíî Download Complete Now Installing üíî"
    echo "  ‚ö° INSTALLING Ôº¥Ôº®ŒõÔºÆ‚ô¢Ôº≥ÔºçÔº∞Ôº≤‚ô¢ ‚ö°"
    rm -rf "$THANOSpath"
    # _THANOSBOT_MAIN
    cd $THANOSPATH
    echo "    ‚ö°Starting Ôº¥Ôº®ŒõÔºÆ‚ô¢Ôº≥ÔºçÔº∞Ôº≤‚ô¢‚ö° "
    echo " üíû NOW WAIT 3 MIN INSTALLING ALL THANOS PLUGIN üíû"
    # _THANOSBOT_PLUG
    python3 ../setup/updater.py ../requirements.txt requirements.txt
    echo " ‚Ä¢‚Ä¢‚Ä¢‚ö°Ô∏è STARTING THANOSBOT ‚ö°Ô∏è‚Ä¢‚Ä¢‚Ä¢ "
    python3 -m THANOSPRO
}

_starter
